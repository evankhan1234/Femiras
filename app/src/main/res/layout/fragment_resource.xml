<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/backToTransactionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_search"

        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="13sp"
            android:background="@null"
            android:hint="I'm Looking For . . . . ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:inputType="text" />

    </LinearLayout>

    <TextView
        android:id="@+id/channel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="20dp"
        android:text="Daily Tips"
        android:textColor="#594D92"
        android:textSize="17sp"

        app:layout_constraintEnd_toEndOf="@+id/backToTransactionButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backToTransactionButton"
        app:layout_constraintTop_toBottomOf="@+id/backToTransactionButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="6dp"
        android:id="@+id/third_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channel_tv"
        app:reverseLayout="true"
        tools:listitem="@layout/layout_daily_news" />

    <View
        android:id="@+id/guideline14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>
